<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/LogoHome"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <ImageView
                android:id="@+id/LogoAway"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[3]" />

            <TextView
                android:id="@+id/Versus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="VS"
                android:textSize="15dp"
                app:layout_constraintEnd_toStartOf="@+id/LogoAway"
                app:layout_constraintStart_toEndOf="@+id/LogoHome"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TeamHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Man Utd"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/LogoHome"
                app:layout_constraintTop_toBottomOf="@+id/LogoHome" />

            <TextView
                android:id="@+id/TeamAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Liverpool"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/LogoAway"
                app:layout_constraintTop_toBottomOf="@+id/LogoAway" />

            <TextView
                android:id="@+id/ScoreHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/Versus"
                app:layout_constraintStart_toEndOf="@+id/LogoHome"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ScoreAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/LogoAway"
                app:layout_constraintStart_toEndOf="@+id/Versus"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/MatchSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="94dp"
                android:text="11 March 2020"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/LogoAway"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="@+id/LogoHome"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>